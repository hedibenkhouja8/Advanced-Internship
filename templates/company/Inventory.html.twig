{% extends 'base.html.twig' %}

{% block body %}

<style>
a{color:black;}
th,h2{color:#485785}
.b{padding-left:400px;}
</style><section id="main-content">
	<section class="wrapper">
		<div class="table-agile-info">
    
    <h2>These are your inventory items :</h2>
    <a href="{{path("inventory_new")}}" class="btn btn-outline-info btn-lg float-right" ><i class="fas fa-user-plus"></i>Add Equipement to your inventory</a>
<br><br><br>{{form_start(form)}}

    <div class="form-row align-items-end">
    <div class="col-sm">
      {{form_row(form.location,{'attr':{'placeholder':'Location'}})}}
    </div>
    <div class="col-sm">
      {{form_row(form.operatingsystem)}}
    </div>
    <div class="col-sm">
      {{form_row(form.state)}}
    </div>
    <div class="col-sm">
      {{form_row(form.brand)}}
    </div>
    <div class="form-group">
    <button class=" btn search">
                        <i class="fa fa-search"></i></button>
    
     {{form_end(form)}}
     
    
    <a class="btn search" href='/company/inventory'>
                        <i class="fa fa-redo"></i></button></a></div>
 </div>
 <div class="panel panel-default">
    <div class="panel-heading">
     Inventory
    </div>
    <div>
      <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
        <thead>
          <tr><th scope="col">Equipment</th>
      <th scope="col">User</th>
      <th scope="col">Location</th>
      
       <th scope="col">OperatingSystem</th>
      <th scope="col">State</th>
       <th scope="col">Brand</th>
      <th scope="col">LastScan</th>
      <th scope="col">LastMaintenance</th>
         <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          {% for inventory in inventorys %}
    <tr>
      <td scope="row" >{{inventory.Equipment}}</th>
      <td>{{inventory.User}}</td>
      <td>{{inventory.Locaation}}</td>
      
       <td>{{inventory.OperatingSystem}}</td>
      <td>{{inventory.State}}</td>
      
       <td>{{inventory.Brand}}</td>
      <td>{{inventory.LastScan|date("m/d/Y")}}</td>
      <td>{{inventory.LastMaintenance|date("m/d/Y")}}</td>
       <td> <a href="{{path('inventory_show',{'id':inventory.id})}}"><i class="far fa-eye"></i></a>
          
           <a href="{{path('inventory_edit',{'id':inventory.id})}}" ><i class="fas fa-edit"></i> </a>
           <a href="{{path('inventory_delete',{'id':inventory.id})}}" onclick="return confirm('Are you sure you want to delete this item?');" data-id=""{{inventory.id}}><i class="fas fa-trash delete-inventory"></i> </a>
          </td>
    </tr>
   {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>
</section></section>
     <div class="container">
  
<div class="navigation b">
    {{ knp_pagination_render(inventorys) }}
</div>



</div>
  
{% endblock %}
