{% extends 'base.html.twig' %}
{% block body %}
<style>
a{color:black;}
th,h2{color:#485785}
.b{padding-left:700px;}
</style><section id="main-content">
	<section class="wrapper">
		<div class="table-agile-info">
     <h2>These are your Available Licences :</h2>
       <a href="{{path("licence_new")}}" class="btn btn-outline-info btn-lg float-right" ><i class="fas fa-user-plus"></i>Add a Licence</a>
<br><br><br>{{form_start(form)}}

    <div class="form-row align-items-end">
    <div class="col-sm">
      {{form_row(form.user)}}
    </div>
    <div class="col-sm">
      {{form_row(form.compilancetype)}}
    </div>
    <div class="form-group">
    <button class=" btn search">
                        <i class="fa fa-search"></i></button>
    
     {{form_end(form)}}
     
    
    <a class="btn search" href='/company/licence'>
                        <i class="fa fa-redo"></i></button></a></div>
 </div>
 <div class="panel panel-default">
    <div class="panel-heading">
     Licences
    </div>
    <div>
      <table class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
        <thead>
    <tr>
      <th scope="col">Product Name</th>
      <th scope="col">Supplier</th>
     
      
       <th scope="col">Compilance Type</th>
      <th scope="col">User</th>
       <th scope="col">Purchase Date</th>
      <th scope="col">Expiration Date</th>
       <th scope="col">Category</th>
    <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  {% for licence in licences %}
    <tr>
      <td scope="row">{{licence.ProductName}}</th>
      <td>{{licence.supplier}}</td>
      
       <td>{{licence.CompilanceType}}</td>
      <td>{{licence.User}}</td>
      
       <td>{{licence.PurchaseDate|date("m/d/Y") }}</td>
      <td>{{licence.ExpirationDate|date("m/d/Y") }}</td>
       <td>{{licence.category.name}}</td>
       <td> <a href="{{path('licence_show',{'id':licence.id})}}"><i class="far fa-eye"></i></a>
          
           <a href="{{path('licence_edit',{'id':licence.id})}}" ><i class="fas fa-edit"></i> </a>
           <a href="{{path('licence_delete',{'id':licence.id})}}" onclick="return confirm('Are you sure you want to delete this item?');" ><i class="fas fa-trash "></i> </a>
          </td>
    </tr>
   {% endfor %}
  </tbody>
</table>
</div>
</section></section>
<div class="navigation b">
    {{ knp_pagination_render(licences) }}
</div>



</div>
  
{% endblock %}
