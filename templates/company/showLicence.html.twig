{% extends 'base.html.twig' %}
{% block body %}
<style>
a{color:black;}
th,h2,p,strong{color:#485785}
</style>
<section id="main-content">
	<section class="wrapper">
		<div class="table-agile-info">
     <div class="container"> <h2><i class="fas fa-info-circle"></i> Details about your Licence : <strong></strong></h2>
  <br>
     <div class="card text-center">
    
  <div class="card-header panel-heading">
   <strong> Licence   {{licence.id}}</strong>
  </div>
  <div class="card-body">
    <h5 class="card-title"><strong>Name: </strong> {{licence.ProductName}}</h5>
    <p class="card-title"><strong>User:</strong> {{licence.User}}</p>
    <p class="card-title"><strong>Supplier:</strong> {{licence.supplier}}</p>
    <p class="card-text"><strong>Compilance Type: {{licence.CompilanceType}}</strong></p>
       <p class="card-text"><strong>Categorie: {{licence.category.name}}</strong></p>
    <p class="card-text"><strong>Purchase Date:</strong> {{licence.PurchaseDate|date("m/d/Y")}}</p>
    <p class="card-text"><strong>Expiration  Date:</strong> {{licence.ExpirationDate|date("m/d/Y")}}</p>
       <p class="card-text"><strong>Category Description:</strong> {{licence.category.description}}</p>
    </div>
  <div class="card-footer text-muted">
  <a href="{{path('licence_edit',{'id':licence.id})}}" class="btn btn-warning" title="" >
                <i class="fas fa-edit"></i>
            </a>
            <a href="{{path('licence_delete',{'id':licence.id})}}" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-danger" title=""
                 ><i class="fas fa-trash-alt"></i></a>
 
  </div>
</div>
   
           
     
   
</div>

