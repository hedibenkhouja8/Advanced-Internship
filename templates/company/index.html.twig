{% extends 'base.html.twig' %}
{% block body %}
<style>
a{color:black;}
i,strong,p{color:white;}
.i{color:black;}
.x{background-color:#FC3158;}

.y{background-color:#53d769;}

.z{background-color:#147EFB;}

.e{background-color:#2A2727;}
